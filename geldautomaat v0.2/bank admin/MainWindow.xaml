<Window x:Class="bank_admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bank_admin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="254,78,254,78" Background="#FF9C9C9C">
            <TextBox x:Name="txbUsername" HorizontalAlignment="Center" Margin="0,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="20"/>
            <Button x:Name="btnLogin" Content="log in" HorizontalAlignment="Left" Margin="196,224,0,0" VerticalAlignment="Top" Height="30" Width="80" Click="logIn"/>
            <Label Content="username" HorizontalAlignment="Left" Margin="46,31,0,0" VerticalAlignment="Top"/>
            <Label Content="password" HorizontalAlignment="Left" Margin="46,108,0,0" VerticalAlignment="Top"/>
            <PasswordBox x:Name="pwbPassword" HorizontalAlignment="Left" Margin="43,139,0,0" VerticalAlignment="Top" Width="200"/>
        </Grid>
    </Grid>
</Window>
