<Window x:Class="bank_admin.addAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bank_admin"
        mc:Ignorable="d"
        Title="addAccount" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txbBankAccountNumber" HorizontalAlignment="Left" Height="23" Margin="331,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cbBlocked" HorizontalAlignment="Left" Margin="331,216,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0">
            <ComboBoxItem Content="niet geblokkeerd"/>
            <ComboBoxItem Content="geblokkeerd"/>
        </ComboBox>
        <Label Content="Rekening number" HorizontalAlignment="Left" Margin="331,125,0,0" VerticalAlignment="Top"/>
        <Button x:Name="cancel" Content="cancel" HorizontalAlignment="Left" Margin="10,371,0,0" VerticalAlignment="Top" Width="85" Height="39" Click="cancel_Click"/>
        <Button x:Name="btnaddBankAccount" Content="Voeg toe" HorizontalAlignment="Left" Margin="654,371,0,0" VerticalAlignment="Top" Width="130" Height="39"/>
    </Grid>
</Window>
